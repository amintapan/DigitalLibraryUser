<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bookAccountHistoryCard"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="2"
                android:id="@+id/bookImageViewAH"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookNameTextViewAH"
                    android:text="Book Name"
                    android:textSize="15sp"
                    android:textColor="@color/primary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookAuthorNameTextViewAH"
                    android:text="Author Name"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/availableBooksTextViewAH"
                    android:text="Available Books"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/issuedByTextViewAH"
                    android:text="Issued By"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/issuedOnTextViewAH"
                    android:text="Issued On"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnedOnTextViewAH"
                    android:text="Returned On"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnedByTextViewAH"
                    android:text="Returned By"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>